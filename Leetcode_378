class Solution {
    public int kthSmallest(int[][] mat, int k) {
        PriorityQueue<Integer> pq = new PriorityQueue<>((a,b) -> b-a);
     // max  heap 
        for(int[] row : mat)
        {
            for(int ele : row)
            {   pq.add(ele); 
                if(pq.size() > k)
                {
                    pq.poll(); 
                }
                
            }
        }

      return pq.poll(); 

    }
}
